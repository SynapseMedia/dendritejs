{
  "compilerOptions": {
    "strict": true,
    "target": "ES2019",
    "module": "ES2020",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "removeComments": true,
    "verbatimModuleSyntax": false,
    "skipLibCheck": true,
    "baseUrl": "./",
    "types": ["node"],
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/*",
    "test/*",
    "src/*.d.ts",
    ".eslintrc.js",
    "vitest.config.ts",
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
  ],
}